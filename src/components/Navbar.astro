---
const path = Astro.url.pathname;
const selected = 'text-primary';
---

<div transition:name="nav" class="flex flex-row justify-center my-2 md:gap-12">
    <a href="/" 
        class={`cursor-pointer rounded-lg text-lg p-3 hover:bg-secondary ${path.replaceAll('/', '') === '' ? selected : ""}`}
        aria-current="page">
        Home
    </a>
    <a href="/about" 
        class={`cursor-pointer rounded-lg text-lg p-3 hover:bg-secondary ${path.replaceAll('/', '') === 'about' ? selected : ""}`}
        aria-current="page">
        About
    </a>
    <a href="/blog" 
        class={`cursor-pointer rounded-lg text-lg p-3 hover:bg-secondary ${path.replaceAll('/', '') === 'blog' ? selected : ""}`}
        aria-current="page">Blog</a>
    <a href="/photos" 
        class={`cursor-pointer rounded-lg text-lg p-3 hover:bg-secondary ${path.replaceAll('/', '') === 'photos' ? selected : ""}`}
        aria-current="page">
        Photos
    </a>
</div>