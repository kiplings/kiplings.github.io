---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { Image } from 'astro:assets';
import waiting from '../assets/waiting-spidey.webp';

---

<Layout title="About">
	<main>
		<div class="flex flex-col h-screen justify-start gap-4">
			<Navbar/>
			<div class="flex items-center w-screen justify-center bg-cover">
                <div class="flex flex-col items-center">
					<div class="flex flex-col gap-6 w-full max-w-2xl rounded-lg md:border border-[#45414c] p-8">
						<div class="flex flex-row-reverse gap-3">
							<div class="flex flex-col justify-center items-center gap-4">
								<Image class=" object-cover aspect-square max-w-64 max-h-64 rounded-full" src={waiting} alt=""/>
								<h1 class=" text-2xl font-bold text-[#a676e8]">WIP!</h1>
							</div>
						</div>						
					</div>
                </div>
            </div>
		</div>
	</main>
</Layout>
